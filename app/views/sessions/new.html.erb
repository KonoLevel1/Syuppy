<h1>ログイン</h1>

<%= form_with url: login_path, local: true do |f| %>
    <div class="mb-3">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
    </div>

    <div class="mb-3">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
    </div>

    <div>
        <%= f.submit :ログイン, class: "btn btn-primary mx-1" %>
    </div>
    <%= link_to "アカウントをお持ちでない方はこちら", new_user_path %>
<% end %>