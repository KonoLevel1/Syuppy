<h1>ログイン</h1>

<%= form_with url: login_path, local: true do |f| %>
    <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>

    <div>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
    </div>

    <div>
        <%= f.submit "Login" %>
    </div>
    <%= link_to "アカウントをお持ちでない方はこちら", new_user_path %>
<% end %>
